{
  "name": "rheactor-server",
  "description": "Implementation of an event store based on redis",
  "scripts": {
    "lint": "./node_modules/.bin/standard",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "environment=testing ./node_modules/.bin/mocha --reporter=dot --timeout=1350 test/\\*\\*/\\*.js",
    "test:api": "environment=testing ./node_modules/.bin/mocha --reporter=dot --timeout=1350 test/yadda/\\*\\*/\\*.js",
    "test:backend": "environment=testing ./node_modules/.bin/mocha --reporter=dot --timeout=1350 test/mocha/\\*\\*/\\*.js",
    "test:coverage": "environment=testing ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha --report lcovonly -- -R dot --timeout=1350 test/\\*\\*/\\*.js && cat ./coverage/lcov.info | ./node_modules/.bin/codacy-coverage && rm -rf ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RHeactor/server.git"
  },
  "author": "Resourceful Humans <info@resourceful-humans.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RHeactor/server/issues"
  },
  "homepage": "https://github.com/RHeactor/server#readme",
  "dependencies": {
    "aws-sdk": "^2.3.14",
    "bcrypt": "^0.8.6",
    "bluebird": "^3.4.0",
    "body-parser": "^1.15.1",
    "cors": "^2.7.1",
    "express": "^4.13.4",
    "fast-url-parser": "^1.1.3",
    "glob": "^7.0.3",
    "gm": "^1.22.0",
    "joi": "^8.1.0",
    "jsonwebtoken": "^7.0.0",
    "keypair": "^1.0.0",
    "lodash": "^4.12.0",
    "multer": "^1.1.0",
    "nconf": "^0.8.4",
    "passport": "^0.3.2",
    "passport-http-bearer": "^1.0.1",
    "redis": "^2.6.0-2",
    "rheactor-event-store": "^1.0.0",
    "rheactor-value-objects": "^1.0.0",
    "rheactor-web-app": "^1.0.0",
    "rheactor-yadda-feature-runner": "^1.0.0",
    "superagent": "^2.0.0-alpha.3"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "codacy-coverage": "^1.1.3",
    "istanbul": "^0.4.3",
    "ghooks": "^1.2.1",
    "mocha": "^2.4.5",
    "mocha-lcov-reporter": "^1.2.0",
    "semantic-release": "^4.3.5",
    "standard": "^7.1.0",
    "supertest": "^1.2.0",
    "toposort": "^1.0.0",
    "validate-commit-msg": "^2.6.1",
    "yadda": "^0.17.9"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg"
    }
  }
}
