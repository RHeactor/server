{
  "name": "rheactor-server",
  "description": "Core server components for RHeactor applications",
  "version": "0.0.0-development",
  "scripts": {
    "lint": "standard",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "environment=testing mocha --compilers js:babel-register --reporter=dot --timeout=1350 test/\\*\\*/\\*.js",
    "test:api": "environment=testing mocha --compilers js:babel-register --reporter=dot --timeout=1350 test/yadda/\\*\\*/\\*.js",
    "test:backend": "environment=testing mocha --compilers js:babel-register --reporter=dot --timeout=1350 test/mocha/\\*\\*/\\*.js",
    "test:coverage": "NODE_ENV=nyc babel src --out-dir instrumented-src > /dev/null && nyc --reporter=text-summary --reporter=lcov npm run test",
    "test:coverage-travis": "npm run test:coverage && codeclimate-test-reporter < ./coverage/lcov.info && rm -rf ./coverage",
    "precommit": "npm run lint",
    "commitmsg": "validate-commit-msg && validate-commit-email @resourceful-humans.com$"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ResourcefulHumans/rheactor-server.git"
  },
  "author": "Resourceful Humans <info@resourceful-humans.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ResourcefulHumans/rheactor-server/issues"
  },
  "homepage": "https://github.com/ResourcefulHumans/rheactor-server#readme",
  "dependencies": {
    "@resourcefulhumans/rheactor-errors": "1.x",
    "aws-sdk": "^2.6.4",
    "bcrypt": "^1.0.0",
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "colors": "^1.1.2",
    "cors": "^2.8.1",
    "express": "^4.14.0",
    "fast-url-parser": "^1.1.3",
    "glob": "^7.1.0",
    "joi": "^10.0.0",
    "jsonwebtoken": "^7.1.9",
    "keypair": "^1.0.0",
    "lodash": "^4.16.1",
    "lwip": "0.0.9",
    "moment": "^2.15.1",
    "multer": "^1.2.0",
    "nconf": "^0.8.4",
    "passport": "^0.3.2",
    "passport-http-bearer": "^1.0.1",
    "redis": "^2.6.2",
    "request-promise": "^4.1.1",
    "rheactor-build-views": "^3.x",
    "rheactor-event-store": "^9.x",
    "rheactor-models": ">=2.4.0 <3.0.0",
    "rheactor-value-objects": "^8.x",
    "tcomb": "^3.2.16",
    "template-mailer-aws-lambda-client": "^2.x",
    "transactional-emails": ">=1.15.0 <2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-env": "^1.1.7",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.22.0",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.4.0",
    "husky": "<2.0.0",
    "istanbul": "^0.4.5",
    "lolex": "^1.5.1",
    "mocha": "^3.0.2",
    "mocha-lcov-reporter": "^1.2.0",
    "nyc": "^10.0.0",
    "rheactor-yadda-feature-runner": "^1.0.0",
    "semantic-release": "^6.3.2",
    "standard": "^8.6.0",
    "superagent": "^3.3.1",
    "supertest": "^2.0.0",
    "toposort": "^1.0.0",
    "validate-commit-email": "^1.0.1",
    "validate-commit-msg": "^2.8.0",
    "yadda": "^0.22.0"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "main": "dist/index.js"
}
